{
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "match": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "Path or absolute URL"
            }
          },
          "endpoint": {
            "$ref": "#/properties/sources/items/properties/match/items",
            "description": "Endpoint for Consumer Requests. If omitted this source is assumed to be directly embeddable."
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "comment": {
            "type": "string"
          }
        },
        "required": ["match"],
        "additionalProperties": false
      }
    }
  },
  "required": ["name", "sources"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
